    <script>
        let liffUserProfile = null;
        const GOOGLE_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbxEUJkkWl1UH6PS5_JwryyEt5AwdYfVL2RYqx_G8zrPCcqCA5Nn4fUnIOaBJ1q3OwRI/exec';

        // Initialize LIFF (‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö LINE Login)
        async function initializeLiff() {
            try {
                // ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏ó‡∏î‡∏™‡∏≠‡∏ö - ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏°‡∏µ LIFF ‡πÉ‡∏´‡πâ‡πÉ‡∏ä‡πâ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏≥‡∏•‡∏≠‡∏á
                if (typeof liff === 'undefined') {
                    console.log('LIFF not available, using mock data for testing');
                    liffUserProfile = {
                        displayName: '‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ó‡∏î‡∏™‡∏≠‡∏ö',
                        userId: 'test-user-' + Date.now()
                    };
                    return;
                }

                await liff.init({
                    liffId: 'YOUR_LIFF_ID_HERE' // ‡πÉ‡∏™‡πà LIFF ID ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡∏ô‡∏µ‡πà
                });
                
                if (liff.isLoggedIn()) {
                    await getUserProfile();
                }
            } catch (error) {
                console.error('LIFF initialization failed:', error);
                // ‡πÉ‡∏ä‡πâ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏≥‡∏•‡∏≠‡∏á‡πÄ‡∏°‡∏∑‡πà‡∏≠ LIFF ‡πÑ‡∏°‡πà‡∏û‡∏£‡πâ‡∏≠‡∏°‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô
                liffUserProfile = {
                    displayName: '‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ó‡∏î‡∏™‡∏≠‡∏ö',
                    userId: 'test-user-' + Date.now()
                };
            }
        }

        // Get user profile from LINE
        async function getUserProfile() {
            try {
                if (typeof liff !== 'undefined' && liff.isLoggedIn()) {
                    liffUserProfile = await liff.getProfile();
                } else {
                    // ‡πÉ‡∏ä‡πâ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏≥‡∏•‡∏≠‡∏á
                    liffUserProfile = {
                        displayName: '‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ó‡∏î‡∏™‡∏≠‡∏ö',
                        userId: 'test-user-' + Date.now()
                    };
                }

                document.getElementById('userName').textContent = liffUserProfile.displayName;
                document.getElementById('userId').textContent = liffUserProfile.userId;
                
                // Save user data to Google Sheets
                await saveUserToSheet();
                
                // Show main page
                document.getElementById('loginPage').classList.add('hidden');
                document.getElementById('mainPage').classList.remove('hidden');
                
                // Add floating emojis
                addFloatingEmojis();
                
            } catch (error) {
                console.error('Failed to get user profile:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'üíî ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î',
                    text: '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á',
                    confirmButtonText: '‡∏ï‡∏Å‡∏•‡∏á',
                    background: '#fff',
                    color: '#8B4B9C'
                });
            }
        }

        // Save user data to Google Sheets
        async function saveUserToSheet() {
            try {
                const userData = {
                    action: 'saveUser',
                    userId: liffUserProfile.userId,
                    name: liffUserProfile.displayName,
                    timestamp: new Date().toISOString()
                };

                await sendToGoogleSheet(userData);
            } catch (error) {
                console.error('Failed to save user data:', error);
            }
        }

        // Send data to Google Sheets using JSONP
        function sendToGoogleSheet(data) {
            return new Promise((resolve, reject) => {
                const callbackName = 'jsonp_callback_' + Math.round(100000 * Math.random());
                
                window[callbackName] = function(response) {
                    delete window[callbackName];
                    document.body.removeChild(script);
                    resolve(response);
                };
                
                const script = document.createElement('script');
                const params = new URLSearchParams(data).toString();
                script.src = `${GOOGLE_SCRIPT_URL}?callback=${callbackName}&${params}`;
                
                script.onerror = function() {
                    delete window[callbackName];
                    document.body.removeChild(script);
                    reject(new Error('Script loading failed'));
                };
                
                document.body.appendChild(script);
            });
        }

        // Add floating emojis animation
        function addFloatingEmojis() {
            const emojis = ['üå∏', 'ü¶ã', 'üíï', '‚ú®', 'üå∫', 'üíñ', 'üéÄ', 'üåà', 'üå∑', 'üíù', 'ü§±', 'üë∂'];
            
            setInterval(() => {
                const emoji = document.createElement('div');
                emoji.className = 'emoji-float';
                emoji.textContent = emojis[Math.floor(Math.random() * emojis.length)];
                emoji.style.left = Math.random() * 100 + '%';
                emoji.style.top = Math.random() * 100 + '%';
                emoji.style.animationDelay = Math.random() * 2 + 's';
                
                document.body.appendChild(emoji);
                
                setTimeout(() => {
                    if (emoji.parentNode) {
                        emoji.parentNode.removeChild(emoji);
                    }
                }, 4000);
            }, 2000);
        }

        // Event Listeners
        document.getElementById('lineLoginBtn').addEventListener('click', async () => {
            try {
                Swal.fire({
                    title: 'üíù ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö...',
                    text: '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏£‡∏≠‡∏™‡∏±‡∏Å‡∏Ñ‡∏£‡∏π‡πà‡∏ô‡∏∞‡∏Ñ‡∏∞ üå∏',
                    icon: 'info',
                    allowOutsideClick: false,
                    background: '#fff',
                    color: '#8B4B9C',
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                if (typeof liff !== 'undefined' && !liff.isLoggedIn()) {
                    liff.login();
                } else {
                    await getUserProfile();
                    Swal.close();
                }
            } catch (error) {
                console.error('Login failed:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'üíî ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î',
                    text: '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á',
                    confirmButtonText: '‡∏ï‡∏Å‡∏•‡∏á',
                    background: '#fff',
                    color: '#8B4B9C'
                });
            }
        });

        document.getElementById('pregnancyForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Show loading
            Swal.fire({
                title: 'üíæ ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•...',
                text: '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏£‡∏≠‡∏™‡∏±‡∏Å‡∏Ñ‡∏£‡∏π‡πà‡∏ô‡∏∞‡∏Ñ‡∏∞ ‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏°‡πà‡∏ó‡∏µ‡πà‡∏£‡∏±‡∏Å üå∏',
                icon: 'info',
                allowOutsideClick: false,
                background: '#fff',
                color: '#8B4B9C',
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            try {
                const formData = new FormData(e.target);
                const pregnancyData = {
                    action: 'savePregnancy',
                    userId: liffUserProfile.userId,
                    userName: liffUserProfile.displayName,
                    name: formData.get('name'),
                    appointmentDate: formData.get('appointmentDate'),
                    age: formData.get('age'),
                    pregnancyWeeks: formData.get('pregnancyWeeks'),
                    pregnancyNumber: formData.get('pregnancyNumber'),
                    notes: formData.get('notes') || '',
                    timestamp: new Date().toISOString()
                };

                await sendToGoogleSheet(pregnancyData);
                
                // Success message
                Swal.fire({
                    icon: 'success',
                    title: 'üéâ ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à‡πÅ‡∏•‡πâ‡∏ß!',
                    text: '‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≤‡∏£‡∏ù‡∏≤‡∏Å‡∏Ñ‡∏£‡∏£‡∏†‡πå‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß‡∏Ñ‡πà‡∏∞ ‡∏Ç‡∏≠‡πÉ‡∏´‡πâ‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏∏‡∏Ç‡∏ï‡∏•‡∏≠‡∏î‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡∏£‡∏£‡∏†‡πå‡∏ô‡∏∞‡∏Ñ‡∏∞ üíñ',
                    confirmButtonText: '‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡πà‡∏∞',
                    timer: 5000,
                    timerProgressBar: true,
                    background: '#fff',
                    color: '#8B4B9C'
                });

                // Reset form
                e.target.reset();
                
            } catch (error) {
                console.error('Failed to save pregnancy data:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'üíî ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î',
                    text: '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡∏ô‡∏∞‡∏Ñ‡∏∞',
                    confirmButtonText: '‡∏ï‡∏Å‡∏•‡∏á',
                    background: '#fff',
                    color: '#8B4B9C'
                });
            }
        });

        document.getElementById('logoutBtn').addEventListener('click', () => {
            Swal.fire({
                title: 'üö™ ‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö?',
                text: '‡∏Ñ‡∏∏‡∏ì‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏Ñ‡∏∞?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: '‡πÉ‡∏ä‡πà‡∏Ñ‡πà‡∏∞ ‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö',
                cancelButtonText: '‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å',
                confirmButtonColor: '#DDA0DD',
                cancelButtonColor: '#FFB6C1',
                background: '#fff',
                color: '#8B4B9C'
            }).then((result) => {
                if (result.isConfirmed) {
                    if (typeof liff !== 'undefined') {
                        liff.logout();
                    }
                    location.reload();
                }
            });
        });

        // Initialize app when page loads
        document.addEventListener('DOMContentLoaded', () => {
            initializeLiff();
            
            // ‡πÄ‡∏û‡∏¥‡πà‡∏° floating emojis ‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
            addFloatingEmojis();
        });
    </script>
